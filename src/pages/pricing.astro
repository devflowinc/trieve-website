    callToAction={{
      target: '_blank',
      text: 'Contact For Commercial Self-Hosting License',
      href: 'https://cal.com/nick.k/meet',
    }}
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    prices={[
      {
        title: 'Free Cloud',
        price: 0,
        period: 'Per Month',
