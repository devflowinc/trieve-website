          },
          {
            description: '1 hour maximum response time and guided onboarding',
          },
          {
            description: 'Load your own custom embedding, LLMs, and reranking models',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Talk to sales',
          href: 'https://cal.com/nick.k/meet',
        },
        callToAction2: {
          target: '_blank',
          text: 'humans@trieve.ai',
