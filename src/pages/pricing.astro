---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import PricingCalculator from '~/components/widgets/PricingCalculator';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    title="Pricing"
    subtitle='<p>Unlimited search requests + full AI, merchandising studio & analytics tools included on all plans. No credit card required. See self-hosting options here: <a class="underline hover:text-primary" href="https://docs.trieve.ai/self-hosting/docker-compose" target="_blank">Docker Compose VPS</a>, <a class="underline hover:text-primary" href="https://docs.trieve.ai/self-hosting/aws" target="_blank">AWS EKS</a> , <a class="underline hover:text-primary" href="https://docs.trieve.ai/self-hosting/gcp" target="_blank"> GCP GKE</a>.</p>',
    callToAction={{
      target: '_blank',
      text: 'Contact For Commercial Self-Hosting License',
      href: 'https://cal.com/nick.k/meet',
    }}
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <PricingCalculator client:only="react" />
  </div>

  <CallToAction
    title="Still unsure? Derisk with a custom demo!"
    subtitle="Get a proof of concept with a validation schedule to evaluate Trieve"
    actions={[
      {
        variant: 'primary',
        text: 'Request demo',
        href: '/request-demo',
      },
    ]}
  />
</Layout>
